<resources>
    <!-- Base application theme. -->
    <style name="ListTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="CalculatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#444444</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@android:anim/fade_in</item>
    </style>

    <style name="GreyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/grey_button_background</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">42sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:stateListAnimator">@android:anim/fade_in</item>
    </style>

    <style name="ListTheme.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@android:anim/fade_in</item>
    </style>


</resources>